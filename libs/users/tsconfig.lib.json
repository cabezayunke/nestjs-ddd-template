{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "../../dist/libs/users"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "references": [
    {
      "path": "../../libs/shared"
    },
    {
      "path": "../../libs/logger"
    },
    {
      "path": "../../libs/server"
    }
  ],
  "paths": {
    "@shared": [
      "../../libs/shared/src"
    ],
    "@shared/*": [
      "../../libs/shared/src/*"
    ],
    "@utils/logger": [
      "../../libs/logger/src"
    ],
    "@utils/logger/*": [
      "../../libs/logger/src/*"
    ],
    "@utils/server": [
      "../../libs/server/src"
    ],
    "@utils/server/*": [
      "../../libs/server/src/*"
    ],
  }

}
