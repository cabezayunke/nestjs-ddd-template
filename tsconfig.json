{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "incremental": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "paths": {
      "@shared": [
        "libs/shared/src"
      ],
      "@shared/*": [
        "libs/shared/src/*"
      ],
      "@context/users": [
        "libs/users/src"
      ],
      "@context/users/*": [
        "libs/users/src/*"
      ]
    },  
  },
  "exclude": ["jest.*", "tsconfig.*"]
}